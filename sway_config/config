### Sway lock

# exec swayidle -w \
#          timeout 400 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
exec --no-startup-id swayidle -w timeout 200 'swaylock --daemonize --image $HOME/.config/sway/bg/bg.jpg' \
        timeout 200 'swaymsg "output * power off"' \
        resume 'swaymsg "output * power on"' \
        before-sleep 'swaylock -f -c 000000'

